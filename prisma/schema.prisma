generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id         String     @id @default(uuid())
  firstName  String
  lastName   String
  userName   String  @unique
  email      String  @unique
  phone      String  @unique
  password   String
  avatar     String @default("")
  isVerified Boolean @default(false)
}
